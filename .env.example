# Smart Parking App - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Gemini API Key (Required for AI smart search feature)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Flask Secret Key (Optional - will use a default in development)
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_flask_secret_key_here

# Database URL (Optional - defaults to SQLite)
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname
# DATABASE_URL=postgresql://user:password@localhost:5432/parking_db

# Azure Key Vault (Optional - for production deployments on Azure)
# KEY_VAULT_NAME=your_key_vault_name

# Flask Environment (Optional)
# FLASK_ENV=development
